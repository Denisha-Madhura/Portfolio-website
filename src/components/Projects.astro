---
interface Props {
    isFeatured?: boolean;
}

const { isFeatured = false } = Astro.props;

const allProjects = [
    {
        id: "01",
        title: "Project One",
        description: "A modern web application built with React and Node.js. Featuring a robust backend and a sleek, responsive frontend.",
        tags: ["React", "Node.js", "MongoDB"],
        gradient: "gradient-1"
    },
    {
        id: "02",
        title: "Project Two",
        description: "E-commerce platform with stripe integration. Designed for conversion and seamless user experience.",
        tags: ["Next.js", "Stripe", "Tailwind"],
        gradient: "gradient-2"
    },
    {
        id: "03",
        title: "Project Three",
        description: "Mobile-first social media dashboard. Real-time updates and interactive data visualization.",
        tags: ["Vue.js", "Firebase", "Sass"],
        gradient: "gradient-3"
    },
    {
        id: "04",
        title: "Project Four", 
        description: "AI-powered image generator tool offering seamless integration and high-performance processing.",
        tags: ["Python", "TensorFlow", "React"],
        gradient: "gradient-1" 
    }
];

const projects = isFeatured ? allProjects.slice(0, 2) : allProjects;
---

<section id="projects">
    <div class="container">
        <h2 class="section-title">{isFeatured ? "Featured Work" : "All Projects"}</h2>
        {isFeatured && <p class="section-subtitle">A glimpse into my recent work.</p>}
        {!isFeatured && <p class="section-subtitle">A comprehensive collection of my digital creations.</p>}
        
        <div class="projects-list">
            {projects.map((project) => (
                <article class="project-item">
                    <div class="project-content">
                        <span class="project-number">{project.id}</span>
                        <h3>{project.title}</h3>
                        <p>{project.description}</p>
                        <div class="tags">
                            {project.tags.map(tag => <span>{tag}</span>)}
                        </div>
                        <a href="#" class="view-project">View Full Project &rarr;</a>
                    </div>
                    <div class="project-visual">
                        <div class={`visual-placeholder ${project.gradient}`}></div>
                    </div>
                </article>
            ))}
        </div>
        
        {isFeatured && (
            <div class="view-all-container">
                <a href="/projects" class="btn-view-all">View All Projects</a>
            </div>
        )}
    </div>
</section>

<style>
    section {
        padding: 8rem 2rem;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .section-title {
        font-size: 3rem;
        margin-bottom: 0.5rem;
        background: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .section-subtitle {
        color: var(--text-secondary);
        font-size: 1.1rem;
        margin-bottom: 5rem;
        max-width: 500px;
    }

    .projects-list {
        display: flex;
        flex-direction: column;
        gap: 8rem;
    }

    .project-item {
        display: grid;
        grid-template-columns: 1fr 1.5fr;
        gap: 4rem;
        align-items: center;
    }

    .project-item:nth-child(even) {
        direction: rtl; /* Alternate layout */
    }
    
    .project-item:nth-child(even) .project-content {
        direction: ltr; /* Reset text direction */
    }

    .project-number {
        font-size: 4rem;
        font-weight: 700;
        color: rgba(255, 255, 255, 0.05);
        display: block;
        line-height: 1;
        margin-bottom: 1rem;
    }

    h3 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    p {
        color: var(--text-secondary);
        font-size: 1.1rem;
        line-height: 1.7;
        margin-bottom: 2rem;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        margin-bottom: 2.5rem;
    }

    .tags span {
        font-size: 0.9rem;
        padding: 0.4rem 1rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 50px;
        color: var(--text-secondary);
    }

    .view-project {
        display: inline-block;
        color: var(--accent-color);
        font-weight: 600;
        font-size: 1.1rem;
        position: relative;
    }

    .view-project::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 100%;
        height: 2px;
        background: var(--accent-color);
        transform: scaleX(0);
        transform-origin: right;
        transition: transform 0.3s ease;
    }

    .view-project:hover::after {
        transform: scaleX(1);
        transform-origin: left;
    }

    .visual-placeholder {
        width: 100%;
        aspect-ratio: 16/9;
        border-radius: 12px;
        opacity: 0.8;
        transition: transform 0.4s ease;
        border: 1px solid rgba(255,255,255,0.1);
    }

    .project-item:hover .visual-placeholder {
        transform: scale(1.02);
    }

    .gradient-1 { background: radial-gradient(circle at top right, #3245FF 0%, #0f111a 70%); }
    .gradient-2 { background: radial-gradient(circle at bottom left, #BC52EE 0%, #0f111a 70%); }
    .gradient-3 { background: radial-gradient(circle at center, #D83333 0%, #0f111a 70%); }

    @media (max-width: 900px) {
        .project-item {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .project-item:nth-child(even) {
            direction: ltr; /* Reset for mobile */
        }
    }

    .view-all-container {
        display: flex;
        justify-content: center;
        margin-top: 4rem;
    }

    .btn-view-all {
        padding: 1rem 3rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 50px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-view-all:hover {
        background: var(--accent-gradient);
        border-color: transparent;
        transform: translateY(-2px);
    }
</style>
