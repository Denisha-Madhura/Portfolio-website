    {/* Scroll Down Indicator */}
    <div
        class="absolute bottom-10 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 opacity-50 animate-bounce"
    >
        <span class="text-xs uppercase tracking-widest text-white/60"
            >Scroll Down</span
        >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-white"><path d="M7 13l5 5 5-5M7 6l5 5 5-5"></path></svg
