---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="Resume | Denisha Madhura">
    <Navbar />
    <main
        class="pt-24 min-h-screen container mx-auto px-6 relative z-10 flex flex-col items-center gap-8 pb-12"
    >
        <div class="flex flex-col items-center gap-4 text-center">
            <h1
                class="text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white to-white/60"
            >
                My Resume
            </h1>
            <p class="text-white/60 max-w-lg">
                View my resume below or download it for later.
            </p>
        </div>

        {/* Download Button */}
        <a
            href="/resume.pdf"
            download="resume.pdf"
            class="px-8 py-3 bg-white text-black font-semibold rounded-full hover:bg-white/90 transition-all duration-300 flex items-center gap-2 group shadow-[0_0_20px_rgba(255,255,255,0.3)] hover:shadow-[0_0_30px_rgba(255,255,255,0.5)]"
        >
            <span>Download Resume</span>
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5 group-hover:translate-y-1 transition-transform duration-300"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="7 10 12 15 17 10"></polyline>
                <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
        </a>

        {/* PDF Preview Container */}
        <div
            class="w-full max-w-4xl aspect-[1/1.4] bg-white/5 rounded-2xl border border-white/10 overflow-hidden shadow-2xl relative group"
        >
            <iframe
                src="/resume.pdf"
                class="w-full h-full"
                title="Resume Preview"
            >
            </iframe>

            {
                /* Fallback for when iframe doesn't load or on mobile where pdf viewing might be tricky */
            }
            <div
                class="absolute inset-0 flex flex-col items-center justify-center bg-black/90 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none md:hidden text-center p-6"
            >
                <p class="text-white/80 mb-4">
                    Tap download below to view the full PDF
                </p>
            </div>
        </div>
    </main>
</Layout>
