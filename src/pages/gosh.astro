---
import Layout from "../layouts/Layout.astro";
import GoshTerminal from "../components/GoshTerminal";
import CopyCommand from "../components/CopyCommand";
---

<Layout>
    <main class="min-h-screen flex flex-col items-center pt-32 pb-20 px-4">
        {/* Hero Section */}
        <section
            class="max-w-4xl mx-auto text-center mb-16 relative z-10 w-full"
        >
            <h1
                class="text-6xl md:text-8xl font-bold tracking-tighter mb-6 bg-clip-text text-transparent bg-gradient-to-b from-white to-white/40"
            >
                Gosh - The Go Shell
            </h1>
            <p
                class="text-xl md:text-2xl text-white/60 font-light mb-12 max-w-2xl mx-auto"
            >
                a fast and high performance Unix like shell written in go
            </p>

            {/* GitHub Button */}
            <div class="mb-12">
                <a
                    href="https://github.com/denisha-madhura/Gosh"
                    target="_blank"
                    class="inline-flex items-center gap-2 text-white/60 hover:text-white transition-colors duration-300 bg-white/5 hover:bg-white/10 px-4 py-2 rounded-full border border-white/10 backdrop-blur-sm text-sm"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path
                            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                        ></path>
                        <path d="M9 18c-4.51 2-5-2-7-2"></path>
                    </svg>
                    <span>View on GitHub</span>
                </a>
            </div>

            {/* Curl Command Placeholder */}
            <CopyCommand client:load />

            {/* Small Hero Info */}
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-left mb-16">
                <div
                    class="bg-white/5 p-6 rounded-2xl border border-white/5 backdrop-blur-sm"
                >
                    <h3 class="text-xl font-semibold mb-2 text-white">
                        Blazing Fast
                    </h3>
                    <p class="text-white/60">
                        Built with performance in mind using Go's lightweight
                        concurrency.
                    </p>
                </div>
                <div
                    class="bg-white/5 p-6 rounded-2xl border border-white/5 backdrop-blur-sm"
                >
                    <h3 class="text-xl font-semibold mb-2 text-white">
                        Coming for Windows and macOS soon
                    </h3>
                    <p class="text-white/60">
                        Native support for Linux, bringing a consistent
                        experience across your favorite Unix-like systems.
                    </p>
                </div>
                <div
                    class="bg-white/5 p-6 rounded-2xl border border-white/5 backdrop-blur-sm"
                >
                    <h3 class="text-xl font-semibold mb-2 text-white">
                        Memory Safe
                    </h3>
                    <p class="text-white/60">
                        Leverages Go's memory safety guarantees to prevent
                        common shell vulnerabilities.
                    </p>
                </div>
            </div>

            {/* Interactive Terminal Demo */}
            <div class="w-full text-left mb-24">
                <h2 class="text-2xl font-bold mb-6 text-center text-white/80">
                    Try it out
                </h2>
                <GoshTerminal client:visible />
            </div>

            {/* Downloads Section */}
            <div class="w-full max-w-4xl mx-auto text-left">
                <h2 class="text-2xl font-bold mb-8 text-center text-white/80">
                    Direct Downloads
                </h2>
                <div
                    class="overflow-hidden rounded-2xl border border-white/10 bg-[#11111b]/60 backdrop-blur-md shadow-2xl p-8 text-center"
                >
                    <a
                        href="https://github.com/denisha-madhura/Gosh/releases"
                        target="_blank"
                        class="inline-flex items-center gap-2 text-white/80 hover:text-white transition-colors duration-300 bg-white/10 hover:bg-white/20 px-6 py-3 rounded-full border border-white/10 backdrop-blur-sm text-lg font-medium"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
                            ></path>
                            <polyline points="7 10 12 15 17 10"></polyline>
                            <line x1="12" y1="15" x2="12" y2="3"></line>
                        </svg>
                        <span>Download on GitHub</span>
                    </a>
                    <p class="mt-4 text-white/40 text-sm">
                        Linux (amd64) available. macOS coming soon.
                    </p>
                </div>
            </div>
        </section>
    </main>
</Layout>
